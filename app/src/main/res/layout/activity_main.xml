        android:id="@+id/tv_totalIngreso"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/placeholder_pesos"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_totalEgreso"
        app:layout_constraintTop_toBottomOf="@+id/txt_ingresoDomingo" />

    <TextView
        android:id="@+id/tv_totalEgreso"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="@string/placeholder_pesos"
