        android:id="@+id/tv_totalCaja"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/placeholder_pesos"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_totalIngreso"
        app:layout_constraintTop_toBottomOf="@+id/txt_cajaDomingo" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:background="@drawable/background_button_default"
        android:onClick="editarDatos"
        android:padding="10dp"
        android:text="@string/btn_editar"
        android:textColor="@color/buttonDefaultTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalCaja" />

    <Spinner
        android:id="@+id/spinner_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/spinner_dias"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalIngreso" />

    <Spinner
        android:id="@+id/spinner_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalCaja" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_button_default"
        android:onClick="guardarDatos"
        android:padding="10dp"
        android:text="@string/btn_guardar"
