    <EditText
        android:id="@+id/txt_cajaSabado"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:hint="@string/placeholder_pesos"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/txt_ingresoLunes"
        app:layout_constraintTop_toBottomOf="@+id/txt_cajaViernes" />

    <EditText
        android:id="@+id/txt_ingresoSabado"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:hint="@string/placeholder_pesos"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/txt_egresoSabado"
